option_settings:
  aws:elasticbeanstalk:application:environment:
    PORT: "8080"
    API_ADDR: ":8080"
    DB_DSN: "postgres://postgres:postgres@localhost:5432/energy?sslmode=disable"
    REDIS_ADDR: "localhost:6379"
    MQTT_BROKER: "tcp://localhost:1883"
    AWS_REGION: "us-east-1"
    USE_CLOUD_SERVICES: "true"
    AWS_S3_BUCKET: "energy-grid-reports"
    AWS_SNS_TOPIC_ARN: "arn:aws:sns:us-east-1:402831945884:energy-grid-alerts"
  
  aws:elasticbeanstalk:container:golang:staticfiles:
    /public: public

  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

  aws:autoscaling:launchconfiguration:
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role
    InstanceType: t3.small

  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4

  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 7